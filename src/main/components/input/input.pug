link(rel="stylesheet", href="input.css")

mixin input({type, name, placeholder, value, isFocused, withButton,})
  -
    let inputClass = 'input__default';

    if (isFocused) {
      inputClass += 'input__default_focused';
    }

    if (withButton) {
      inputClass += 'input__default_with-button';
    }

  .input
      input(class=input__default, type=type, name=name, placeholder=placeholder, value=value)
      if withButton
        button.input__button(type='submit')



